<h1 class="title is-1">Amico</h1>
<br/>
<p>Press start to begin recording from the microphone.</p>
<br/>
<div
  data-controller="conversation"
  data-conversation-is-listening-value="false"
>
  <div>
    <button
      data-action="click->conversation#startClicked"
      data-conversation-target="startButton"
      class="button is-primary"
    >Start</button>
    <br/>
    <br/>
    <button
      data-action="click->conversation#stopClicked"
      data-conversation-target="stopButton"
      class="button is-danger"
    >Stop</button>
  </div>

  <br/>
  <br/>

  <%= link_to "Sign out", destroy_user_session_path, data: { "turbo-method": :delete } %>
  <br/>
  <%= link_to "Edit my account", edit_user_registration_path %>
  <% if current_user.admin? %>
    <br/>
    <%= link_to "Admin dashboard", admin_index_path %>
  <% end %>

  <br/>
  <br/>

  <div style="height: 40vh;">
    <canvas data-conversation-target="chart"></canvas>
  </div>
  <%= render "chat" %>
</div>
